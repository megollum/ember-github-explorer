<div class="white-container">
    <h3>{{user.login}}'s Repositories</h3>
    <hr> 
    {{#filter-component model=model placeholder="Filter repositories by name" filterField="name" as |filteredModel|}}
    <hr>
    <table class="table table-hover">
        <tbody class="special-borders">
            {{#each filteredModel as |item|}} 
                <tr {{action "goToRepo" item}}>
                    <td>
                        {{item.name}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{/filter-component}}
</div>